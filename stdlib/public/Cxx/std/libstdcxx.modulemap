//===----------------------------------------------------------------------===//
//
//  In order to use a C++ stdlib from Swift, the stdlib needs to have a Clang
//  module map. Currently libstdc++ does not have a module map. To work around
//  this, Swift provides its own module map for libstdc++.
//
//===----------------------------------------------------------------------===//

module std {
  header "libstdcxx.h"
  requires cplusplus
  export *

  module __bits {
    header "bits/std_abs.h" // included by cmath and cstdlib
    export *
  }

  /// C compatibility headers.
  module compat {
    module cassert {
      header "cassert"
      export *
    }

    module cerrno {
      header "cerrno"
      export *
    }

    module cctype {
      header "cctype"
      export *
    }

    module cfloat {
      header "cfloat"
      export *
    }

    module ciso646 {
      header "ciso646"
      export *
    }

    module climits {
      header "climits"
      export *
    }

    module cmath {
      header "cmath"
      export *
    }

    module cstdarg {
      header "cstdarg"
      export *
    }

    module cstddef {
      header "cstddef"
      export *
    }

    module cstdio {
      header "cstdio"
      export *
    }

    module cstring {
      header "cstring"
      export *
    }

    module ctime {
      header "ctime"
      export *
    }

    module cwchar {
      header "cwchar"
      export *
    }

    module cwctype {
      header "cwctype"
      export *
    }
  }
}
